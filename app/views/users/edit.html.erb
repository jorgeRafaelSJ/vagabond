<div class="col-sm-4 col-sm-offset-4">
	<% if @user.errors.any? %>
	  <div id="error_explanation">
	    <h2 class="error-warning">
	      <%= pluralize(@user.errors.count, "error") %> prohibited
	      this user from being saved:
	    </h2>
	    <ul>
	      <% @user.errors.full_messages.each do |msg| %>
	      <li class="error-message"><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>
</div>

<div class="col-sm-4 col-sm-offset-4" id="edit-form">
	
	<%= form_for @user, html: { multipart: true } do |f| %>
		<%= f.label "profile image" %>
		<%= f.file_field :avatar %>
		<br>
		<%= f.label :email %>
		<%= f.text_field :email, class:'form-control'%>
		<br>
		<%= f.label :full_name %>
		<%= f.text_field :full_name, class: 'form-control' %>
		<br>
		<%= f.label :city %>
		<%= f.collection_select(:city, City.order(:name),:id,:name, {include_blank: true}, {class: "form-control"}) %>
		<br>
		<div class="text-right">
		<%= f.submit "Update", class: 'btn btn-default' %>
		</div>
	<% end %>

</div>