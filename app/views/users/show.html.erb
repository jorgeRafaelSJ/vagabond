<div class="container">
	<div class="row">
		<div class="col-sm-4">
			<img src="http://placehold.it/300x300" alt="">
		</div>
		<div class="col-sm-8">
			<h2><%= @user.full_name %></h2>
			<h4><%= @user.city %></h4>
			<h4><%= @user.created_at %></h4>
		</div>
	</div>

	<br>
	<hr>
	<br>

	<div class="container">
		 <!-- col-sm-10 col-sm-offset-1 -->
		<% @posts.each do |post| %>
			<div class="row">
				<div class="user-post col-sm-10 col-sm-offset-1">
					<div class="col-sm-3">
						<img src="http://placehold.it/150x150" alt="">
					</div>
					<div class="col-sm-9">
						<h3><%= post.title %></h3>
						<div>
							<%= post.content %>
						</div>
					</div>
				</div>
			</div>
			<br>
		<% end %>
	</div>
</div>