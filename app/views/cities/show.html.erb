<div class="jumbotron">
	<%= @city.name %>
</div>
<!-- use button_to? -->
<button id="new-post-btn" class="btn btn-lg-default"><%= link_to "Create New Post", new_city_post_path(@city) %></button>
<!-- EACH POST FOR CITY -->
<!-- thumbnail -->
<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<% @posts.each do |post| %>
				
				<div class="col-sm-2">
					<img src="http://placehold.it/100x100" alt="">
				</div>

				<div class="col-sm-10">
					
					<div>
						<%= post.title %>
					</div>
					<br>
					<div>
						<%= post.content %>
					</div>
					<br>
					<div>
						<% author =  User.find(post.user_id) %>
						Posted by: <%= author.full_name %>
					</div>

				</div>

				<hr>
			<% end %>
		</div>
	</div>
</div>