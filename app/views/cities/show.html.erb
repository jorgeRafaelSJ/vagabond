<div class="jumbotron">
	<%= @city.name %>
</div>
<!-- use button_to? -->
<button id="new-post-btn" class="btn btn-lg-default"><%= link_to "Create New Post", new_city_post_path(@city) %></button>
<!-- EACH POST FOR CITY -->
<!-- thumbnail -->
<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<% if @posts.count >= 1 %>
				<% @posts.each do |post| %>
				
				<div class="row">
					<div class="col-sm-3">
						<img src="http://placehold.it/150x150" alt="">
					</div>

					<div class="col-sm-9">

						<div>
							<%= link_to post.title, city_post_path(post.city_id, post.id) %>
						</div>
						<br>
						<div>
							<%= post.content %>
						</div>
						<br>
						<div>
							<% author =  User.find(post.user_id) %>
							by: <%= author.full_name %>
						</div>
						<br>
						<div>
							<%= post.created_at.strftime("%B %d, %Y") %>
						</div>

					</div>
				</div>
				<hr>
				<% end %>
			<% end %> 
		</div>
	</div>
</div>