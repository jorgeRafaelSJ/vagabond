
<!-- Image needs to be here for dynamic rendering. Can't use clown hats in .css file -->
<style media="screen">
  .jumbotron { 
  	background-image: url(<%= @city.img_url %>);
  	color: white;
  }

</style>


<div class="jumbotron">
	<h1 class="citytitle"><%= @city.name %></h1>
</div>
<!-- use button_to? -->
<div class="text-center">
	<button id="new-post-btn" class="btn btn-lg-default"><%= link_to "Create New Post", new_city_post_path(@city) %></button>
</div>
<!-- EACH POST FOR CITY -->
<!-- thumbnail -->
<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<% if @posts.count >= 1 %>
			<% @posts.each do |post| %>

			<div class="row">
				<div class="col-sm-3">
					<% author =  User.find(post.user_id) %>
					<%= image_tag author.avatarthumb.url(:thumb) %>
				</div>

				<div class="col-sm-9">

					<div>
						<%= link_to post.title, city_post_path(post.city_id, post.id) %>
					</div>
				<br>
					<div>
						<%= truncate(post.content, length: 1000) { link_to "Read More", city_post_path(post.city_id, post.id)} %>
					</div>
				<br>
					<div>
						Posted by: <%=link_to author.full_name, user_path(author) %>
					</div>
				<br>
					<div>
						<%= post.created_at.strftime("%B %d, %Y") %>
					</div>
				<br>
					<div>
						Tags: <%= post.tag_list %> 
					</div>
					<% user = User.find(post.user_id) %> 
					<% if current_user == user %>
						<%= button_to "Edit", edit_city_post_path(post.city_id, post.id)%>
						<%= button_to "Delete", city_post_path(post.city_id, post.id), method: :delete, data: { confirm: "You sure?" } %> 
					<% end %> 
				<br>

				</div>
			</div>
			<hr>
			<% end %>
			<% end %> 
		</div>
	</div>
</div>
<%= will_paginate @posts %>