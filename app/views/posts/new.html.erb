<div class="row">
	<div class="col-sm-4 col-sm-offset-4">
	<!-- error div goes here -->
	<% if @post.errors.any? %>
	  <div id="error_explanation">
	    <h2 class="error-warning">
	      <%= pluralize(@post.errors.count, "error") %> prohibited
	      this post from being saved:
	    </h2>
	    <ul>
	      <% @post.errors.full_messages.each do |msg| %>
	      <li class="error-message"><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>
</div>

<%= form_for [@city, @post] do |f| %>
	<div class="col-sm-4 col-sm-offset-4" id="new-post-form">
		<%= f.label :title %>
		<%= f.text_field :title, class:'form-control' %>
	<br>
		<%= f.label :content %>
		<%= f.text_area :content, size: "5x8", class:'form-control' %>
	<br>
		<%= f.label :tag_list %>
		<%= f.text_field :tag_list, size: "5x8", class: 'form-control', placeholder: 'Tags (Separated by commas)' %>
	<br>
		<div class="text-right">
			<%= f.submit "Submit", class:'btn btn-default' %>
		</div>
	</div>
<% end %>